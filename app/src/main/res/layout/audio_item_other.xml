<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginTop="16dp">
    <TextView
        android:id="@+id/textViewCreateTime"
        android:layout_width="match_parent"
        tools:text="2020-10-10 20:00"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="end|bottom"
        android:paddingEnd="12dp"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/img_user_register_name"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <LinearLayout
            android:id="@+id/linearLayoutMessage"
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="18dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:background="@drawable/chat_background_reverse"
            android:paddingEnd="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                tools:text="10ç§’"
                android:gravity="center_vertical"
                android:textSize="32sp"
                android:textColor="#fff"
                android:id="@+id/textViewFileLocation"
                android:layout_height="match_parent">
            </TextView>
            <ImageButton
                android:contentDescription="@string/app_name"
                android:id="@+id/imageViewPlay"
                android:layout_gravity="center"
                android:background="@mipmap/img_play_video"
                android:layout_width="50dp"
                android:layout_height="50dp">
            </ImageButton>
        </LinearLayout>
        <View
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    </LinearLayout>


</LinearLayout>